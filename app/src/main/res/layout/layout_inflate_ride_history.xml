<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflate_ride_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/inflate_ride_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:tint="@color/app_blue"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inflate_ride_date"
                style="@style/SubTitleSmall"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:textColor="@color/app_blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inflate_ride_tickets"
                style="@style/SubTitleSmall"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:textColor="@color/app_black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="7.5dp"
                    android:layout_height="7.5dp"
                    android:src="@mipmap/ic_circle_solid"
                    android:tint="@color/app_green" />

                <TextView
                    android:id="@+id/inflate_ride_from"
                    style="@style/SubTitleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="0dp"
                    android:textColor="@color/app_gray"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="7.5dp"
                    android:layout_height="7.5dp"
                    android:src="@mipmap/ic_circle_solid"
                    android:tint="@color/app_red" />

                <TextView
                    android:id="@+id/inflate_ride_to"
                    style="@style/SubTitleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="0dp"
                    android:textColor="@color/app_gray"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inflate_ride_fare"
                style="@style/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawablePadding="5dp"
                android:padding="0dp"
                android:textColor="@color/app_black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inflate_ride_status"
                style="@style/SubTitleSmall"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/inflate_ride_navigation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:padding="3dp"
                android:src="@drawable/ic_navigation"
                android:tint="@color/app_light_blue" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray_mid" />

</LinearLayout>

